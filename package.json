{
  "name": "nfl-playoff-simulator",
  "version": "0.1.0",
  "main": "src/app.jsx",
  "scripts": {
    "server": "node server/main.js",
    "build": "react-scripts build",
    "devServer": "nodemon --watch server server/main.js",
    "client": "esbuild --bundle --minify --target=es6 --outfile=public/bundle.js src/app.jsx",
    "devClient": "nodemon --watch client --exec ./node_modules/.bin/esbuild --bundle --sourcemap --target=es6 --outfile=public/bundle.js src/app.jsx",
    "devClientServe": "esbuild --bundle --sourcemap --servedir=public --target=es6 --outfile=public/bundle.js src/app.jsx",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "private": true,
  "author": "Drew Accola",
  "license": "MIT",
  "devDependencies": {
    "axios": "^0.26.1",
    "esbuild": "^0.14.28",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "nodemon": "^2.0.15",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "express": "^4.17.3",
    "react-scripts": "^2.1.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
